<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    <!--事物的监控级别 All < Trace < Debug < Info < Warn < Error < Fatal < OFF-->
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </appenders>
    <loggers>
        <!--我们只让这个logger输出trace信息，其他的都是error级别-->
        <!--
        additivity开启的话，由于这个logger也是满足root的，所以会被打印两遍。
        不过root logger 的level是error，为什么Bar 里面的trace信息也被打印两遍呢
        -->
        <logger name="practice8_AttributeMap.HelloWorldServer" level="trace" additivity="false">
            <appender-ref ref="Console"/>
        </logger>
        <root level="WARN">
            <appender-ref ref="Console"/>
        </root>
    </loggers>
</configuration>